<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Danh sách người dùng</title>
    <style>
        table {
            width: 80%;
            margin: 20px auto;
            border-collapse: collapse;
        }
        th, td {
            border: 1px solid black;
            padding: 8px;
            text-align: left;
        }
        th {
            background-color: #f2f2f2;
        }
        h1 {
            text-align: center;
        }
    </style>
</head>
<body>
    <h1>Danh sách người dùng</h1>
    <table>
        <thead>
            <tr>
                <th>ID</th>
                <th>Email</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Address</th>
                <th>Phone Number</th>
                <th>Gender</th>
                <th>Role ID</th>
            </tr>
        </thead>
        <tbody>
            <% if (dataUser && dataUser.length > 0) { %>
                <% dataUser.forEach(user => { %>
                    <tr>
                        <td><%= user.id %></td>
                        <td><%= user.email %></td>
                        <td><%= user.firstName %></td>
                        <td><%= user.lastName %></td>
                        <td><%= user.address %></td>
                        <td><%= user.phonenumber %></td>
                        <td><%= user.gender ? 'Male' : 'Female' %></td>
                        <td><%= user.roleId %></td>
                    </tr>
                <% }) %>
            <% } else { %>
                <tr>
                    <td colspan="8" style="text-align: center;">Không có dữ liệu</td>
                </tr>
            <% } %>
        </tbody>
    </table>
</body>
</html>